  div(class="tab-content sj_ywbk sj_allfinance")
    include ./components/second/ywbk/allfinance.pug

  div(class="tab-content sj_ywbk sj_estate")
    include ./components/second/ywbk/estate.pug

  div(class="tab-content sj_ywbk sj_restaurant")
    include ./components/second/ywbk/restaurant.pug

  div(class="tab-content sj_ywbk sj_culture2")
