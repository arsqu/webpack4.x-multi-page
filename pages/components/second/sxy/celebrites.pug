- var celebrites = require('./sxy.js').celebrites

each item in celebrites && celebrites.length ? celebrites : []
  if item.title !== ''
    ul
      li(class="sj_yw_item")
        div(class="sj_i_one")= item.title
        div(class="sj_i_two")
          each citem in item.content && item.content.length ? item.content : []
            if citem.type === 'text'
              p= citem.text
            else if citem.type === 'img'
              img(src=citem.src width=citem.width height=citem.height)
            else if citem.type === 'card'
              div(class="sj_card")
                img(src=citem.left.src alt=citem.left.alt)
                div(class="sj_t_desc")
                  p(class="sj_team_name")= citem.right.name
                  each ptext in citem.right.list && citem.right.list.length ? citem.right.list : []
                    p= ptext.text
            else if citem.type === 'link'
              div(class="sj_link")
                span= citem.link.name
                a(href=citem.link.href)= citem.link.href
              
           
  else
    each citem in item.content && item.content.length ? item.content : []
      if citem.type === 'text'
        p= citem.text
      else if citem.type === 'img'
        img(src=citem.src width=citem.width height=citem.height)
      else if citem.type === 'form'
        table
          thead
            each th in citem.th && citem.th.length ? citem.th : []
              th= th
          tbody
            each td in citem.td && citem.td.length ? citem.td : []
              tr
                td= td.date
                td= td.num
                td= td.rate
      else if citem.type === 'card'
        div(class="sj_card")
          img(src=citem.left.src alt=citem.left.alt)
          div(class="sj_t_desc")
            p(class="sj_team_name")= citem.right.name
            each ptext in citem.right.list && citem.right.list.length ? citem.right.list : []
              p= ptext.text
      else if citem.type === 'link'
        div(class="sj_link")
          span= citem.link.name
          a(href=citem.link.href)= citem.link.href
